<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Imunisasi.MainImunisasi">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:text="Imunisasi"
                android:textSize="40dp"
                android:textColor="#ffff"/>

        <Button
            android:layout_marginLeft="300dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/fab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#FFFF"
            android:background="@drawable/ic_add_circle_black_24dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgimunisasi">

        <include layout="@layout/content_main_imunisasi" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgimunisasi2"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/textimunisasi"/>


</RelativeLayout>