<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="@dimen/_118sdp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_13sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCareTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivListFood"
                android:layout_width="@dimen/_118sdp"
                android:layout_height="@dimen/_93sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_1sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/food" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvJudulListCare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvCareTips"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Baby Food Recommendation"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp" />


        <ImageView
            android:id="@+id/ivPeopleImage"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_below="@id/tvJudulListCare"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/people" />

        <TextView
            android:id="@+id/tvPopleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvJudulListCare"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_toRightOf="@id/ivPeopleImage"
            android:fontFamily="@font/nunito_light"
            android:text="Angelica Witson"
            android:textColor="#9F9F9F"
            android:textSize="@dimen/_8ssp" />


    </RelativeLayout>

</RelativeLayout>