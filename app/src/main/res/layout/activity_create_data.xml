<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ManageImunisasiActivity">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="#0ABDE3">

        <ImageView
            android:id="@+id/ivMenuBack"
            android:layout_width="@dimen/_29sdp"
            android:layout_height="@dimen/_29sdp"
            android:src="@drawable/ic_back"
            android:paddingTop="@dimen/_9sdp"
            android:paddingLeft="@dimen/_9sdp"
            android:paddingRight="@dimen/_9sdp"
            android:paddingBottom="@dimen/_9sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_shape_menu"/>


        <TextView
            android:id="@+id/action_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Detail Imunisasi"
            android:textColor="#fff"
            android:textSize="@dimen/_25ssp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_extrabold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_shape_corner"
            android:layout_marginTop="@dimen/_60sdp">

        <TextView
            android:id="@+id/labelJudulKegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kegiatan"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/nunito_light"
            android:textSize="@dimen/_13ssp"
            android:textColor="#4EBDDA"/>

        <EditText
            android:id="@+id/edt_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Kegiatan"
            android:backgroundTint="#1E90FF"
            android:textSize="@dimen/_15ssp"
            android:layout_below="@id/labelJudulKegiatan"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:fontFamily="@font/nunito">
        </EditText>

        <TextView
            android:id="@+id/tvLabelTanggalImun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/nunito_light"
            android:textColor="#4EBDDA"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_below="@id/edt_judul"
            android:layout_marginTop="@dimen/_16sdp">

        </TextView>


        <EditText
            android:id="@+id/edt_tgl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E90FF"
            android:hint="Masukan Tanggal "
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_below="@id/tvLabelTanggalImun"
            android:fontFamily="@font/nunito">

        </EditText>

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_42sdp"
                android:text="Konfirmasi"
                android:textSize="@dimen/_18ssp"
                android:layout_below="@id/edt_tgl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="#fff"
                android:background="@drawable/bg_shape_full"
                android:gravity="center"/>


    </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>