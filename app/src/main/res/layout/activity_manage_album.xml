<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ManageAlbum">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="#0ABDE3">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_29sdp"
            android:layout_height="@dimen/_29sdp"
            android:src="@drawable/ic_back"
            android:paddingTop="@dimen/_9sdp"
            android:paddingLeft="@dimen/_9sdp"
            android:paddingRight="@dimen/_9sdp"
            android:paddingBottom="@dimen/_9sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_shape_menu"/>

            <TextView
                android:id="@+id/action_txt"
                android:layout_centerHorizontal="true"
                android:text="Ubah"
                android:textSize="@dimen/_22ssp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_extrabold"
                android:layout_marginTop="@dimen/_16sdp">
            </TextView>

            <Button
                android:enabled="false"
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
               android:layout_marginTop="@dimen/_18sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/ic_delete_black_24dp">

            </Button>

    </RelativeLayout>


    <RelativeLayout
        android:id="@id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_shape_corner"
            android:layout_marginTop="@dimen/_58sdp">

        <TextView
            android:id="@+id/labelJudulAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/nunito_light"
            android:textColor="#4EBDDA"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp">
        </TextView>

        <EditText
            android:id="@+id/edt_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Judul"
            android:backgroundTint="#0ABDE3"
            android:textSize="@dimen/_15ssp"
            android:layout_below="@id/labelJudulAlbum"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:fontFamily="@font/nunito">
        </EditText>

            <TextView
                android:id="@+id/labelIsiAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/nunito_light"
                android:textColor="#4EBDDA"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_below="@id/edt_judul">
            </TextView>

        <EditText
            android:backgroundTint="#0ABDE3"
            android:id="@+id/edt_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Isi "
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_below="@id/labelIsiAlbum"
            android:fontFamily="@font/nunito">

        </EditText>

            <TextView
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_42sdp"
                android:text="Konfirmasi"
                android:textSize="@dimen/_18ssp"
                android:layout_below="@id/edt_detail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/nunito_extrabold"
                android:textColor="#fff"
                android:background="@drawable/bg_shape_full"
                android:gravity="center"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>