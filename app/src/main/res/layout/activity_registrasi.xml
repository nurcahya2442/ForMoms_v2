<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/relativeUp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/bg_shape_top_profile">

        <TextView
            android:id="@+id/tvJudulRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For Mom's"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:textSize="@dimen/_30sdp"
            android:fontFamily="@font/nunito_extrabold"/>


        <RelativeLayout
            android:id="@+id/relativeLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/bg_shape_corner"
            android:layout_below="@id/tvJudulRegis"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_30sdp">

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvBarRegis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrasi"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relativeUp"
        android:layout_marginTop="@dimen/_18sdp"
        android:textSize="@dimen/_22sdp"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#0ABDE3"/>

    <TextView
        android:id="@+id/tvHintNamaRegis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_below="@id/tvBarRegis"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#4EBDDA"
        android:fontFamily="@font/nunito_light"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtNamaRegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:backgroundTint="#0ABDE3"
        android:layout_below="@id/tvHintNamaRegis"
        android:hint="Immanuel"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/tvHintEmailRegis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/edtNamaRegis"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#4EBDDA"
        android:fontFamily="@font/nunito_light"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtEmailRegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:backgroundTint="#0ABDE3"
        android:layout_below="@id/tvHintEmailRegis"
        android:hint="Refokes@gmail.com"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/tvHintPassRegis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/edtEmailRegis"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#4EBDDA"
        android:fontFamily="@font/nunito_light"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtPasswordRegis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:backgroundTint="#0ABDE3"
        android:layout_below="@id/tvHintPassRegis"
        android:hint="*************"
        android:inputType="textPassword"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/btnRegister"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_42sdp"
        android:text="Daftar"
        android:textSize="@dimen/_20sdp"
        android:layout_below="@id/edtPasswordRegis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#fff"
        android:background="@drawable/bg_shape_full"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvPunyaAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah punya akun?"
        android:layout_below="@id/btnRegister"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/nunito"/>

    <TextView
        android:id="@+id/tvLinkLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:layout_below="@id/btnRegister"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_toRightOf="@id/tvPunyaAkun"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/nunito"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="#0ABDE3"/>




</RelativeLayout>