<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileActivity"
    android:id="@+id/drawer_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/bg_shape_top_profile">

        <ImageView
            android:id="@+id/ivMenuBars"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/fa_bars"
            android:paddingTop="@dimen/_6sdp"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_shape_menu"/>



        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_profile"
            android:textColor="#fff"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/nunito_extrabold"/>

    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivImageProfile"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/bayi_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_75sdp"
        app:civ_border_width="@dimen/_4sdp"
        app:civ_border_color="@android:color/white" />



    <TextView
        android:id="@+id/tvNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivImageProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_35sdp"
        android:fontFamily="@font/nunito"
        android:hint="Nama Bayi"
        android:text="@string/tv_name_profile"
        android:textColor="@android:color/black"
        android:textColorHint="#0ABDE3"
        android:textSize="@dimen/_18ssp" />

    <TextView
        android:id="@+id/tvTanggalLahir"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/tv_tanggal_lahir"
        android:layout_below="@id/tvNameProfile"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        android:textColor="#888888"
        android:hint="Tanggal Lahir"
        android:fontFamily="@font/nunito_light"/>

    <ImageView
        android:id="@+id/ivTempatLahir"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_12sdp"
        android:src="@drawable/ic_tempat_lahir"
        android:layout_below="@id/tvTanggalLahir"
        android:layout_marginStart="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/tvTempatLahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_tempat_lahir"
        android:layout_below="@id/tvTanggalLahir"
        android:layout_toRightOf="@id/ivTempatLahir"
        android:layout_marginStart="@dimen/_5sdp"
        android:textSize="@dimen/_14ssp"
        android:textColor="#9F9F9F"
        android:fontFamily="@font/nunito_light"/>

    <TextView
        android:id="@+id/tvBtnEditProfile"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/edit_profile"
        android:layout_below="@id/tvTempatLahir"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="#0ABDE3"
        android:textStyle="bold"
        android:background="@drawable/bg_shape_corner_umur"
        android:textSize="@dimen/_13ssp"
        android:textAlignment="center"
        android:paddingTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito_bold"/>

    <TextView
        android:id="@+id/tvStatusBayi"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:text="@string/tv_stat_bayi"
        android:textAlignment="center"
        android:layout_below="@id/tvBtnEditProfile"
        android:layout_centerHorizontal="true"
        android:textColor="#888888"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/nunito_light"/>

    <TextView
        android:id="@+id/tvHobby1"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/tv_hobby3"
        android:layout_below="@id/tvStatusBayi"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:background="@drawable/bg_shape_hobby"
        android:textAlignment="center"
        android:paddingTop="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/tvHobby2"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/tv_hobby1"
        android:layout_below="@id/tvStatusBayi"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@drawable/bg_shape_hobby"
        android:textAlignment="center"
        android:paddingTop="@dimen/_5sdp"
        android:layout_toRightOf="@id/tvHobby1"/>

    <TextView
        android:id="@+id/tvHobby3"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/tv_hobby2"
        android:layout_below="@id/tvStatusBayi"
        android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@drawable/bg_shape_hobby"
        android:textAlignment="center"
        android:paddingTop="@dimen/_5sdp"
        android:layout_toRightOf="@id/tvHobby2"/>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationBar"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:menu="@menu/list_sidebar"
        android:layout_height="match_parent"
        android:background="#0ABDE3"
        app:headerLayout="@layout/item_header"
        app:itemTextColor="@android:color/white" />


</androidx.drawerlayout.widget.DrawerLayout>